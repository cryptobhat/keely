<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Material You (Material 3) application theme -->
    <style name="Theme.Kavi" parent="Theme.Material3.DayNight">
        <!-- Material You Primary colors -->
        <item name="colorPrimary">@color/material_you_primary</item>
        <item name="colorOnPrimary">@color/material_you_on_primary</item>
        <item name="colorPrimaryContainer">@color/material_you_primary_container</item>
        <item name="colorOnPrimaryContainer">@color/material_you_on_primary_container</item>

        <!-- Material You Secondary colors -->
        <item name="colorSecondary">@color/material_you_secondary</item>
        <item name="colorOnSecondary">@color/material_you_on_secondary</item>
        <item name="colorSecondaryContainer">@color/material_you_secondary_container</item>
        <item name="colorOnSecondaryContainer">@color/material_you_on_secondary_container</item>

        <!-- Material You Tertiary colors -->
        <item name="colorTertiary">@color/material_you_tertiary</item>
        <item name="colorOnTertiary">@color/material_you_on_tertiary</item>
        <item name="colorTertiaryContainer">@color/material_you_tertiary_container</item>
        <item name="colorOnTertiaryContainer">@color/material_you_on_tertiary_container</item>

        <!-- Material You Surface colors -->
        <item name="colorSurface">@color/material_you_surface</item>
        <item name="colorOnSurface">@color/material_you_on_surface</item>
        <item name="colorSurfaceVariant">@color/material_you_surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/material_you_on_surface_variant</item>

        <!-- Material You Background colors -->
        <item name="android:colorBackground">@color/material_you_background</item>
        <item name="colorOnBackground">@color/material_you_on_background</item>

        <!-- Material You Outline colors -->
        <item name="colorOutline">@color/material_you_outline</item>
        <item name="colorOutlineVariant">@color/material_you_outline_variant</item>

        <!-- Material You Error colors -->
        <item name="colorError">@color/material_you_error</item>
        <item name="colorOnError">@color/material_you_on_error</item>
        <item name="colorErrorContainer">@color/material_you_error_container</item>
        <item name="colorOnErrorContainer">@color/material_you_on_error_container</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/material_you_surface</item>
        <item name="android:navigationBarColor">@color/material_you_surface</item>

        <!-- Enable dynamic colors on Android 12+ -->
        <item name="dynamicColorThemeOverlay" tools:targetApi="s">@style/ThemeOverlay.Material3.DynamicColors.DayNight</item>
    </style>
</resources>